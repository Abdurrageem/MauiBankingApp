<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiBankingExercise.Views.CustomerDashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Customer.FullName}"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <StackLayout Padding="20" Spacing="25">
            <!-- Welcome Section -->
            <Frame BackgroundColor="#27AE60" 
                   CornerRadius="15" 
                   Padding="25"
                   HasShadow="True">
                <StackLayout Spacing="12">
                    <Label Text="Welcome Back!" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" />
                    <Label Text="{Binding Customer.FullName}" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="{Binding Customer.Email}" 
                           FontSize="16" 
                           TextColor="#D5F4E6" />
                </StackLayout>
            </Frame>

            <!-- Accounts Header -->
            <StackLayout Orientation="Horizontal" 
                         Spacing="10">
                <Label Text="Your Accounts" 
                       FontSize="22" 
                       FontAttributes="Bold" 
                       TextColor="#2C3E50"
                       VerticalTextAlignment="Center" />
            </StackLayout>

            <!-- Accounts List -->
            <CollectionView ItemsSource="{Binding Accounts}"
                            ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="5,8">
                            <Frame BackgroundColor="White" 
                                   CornerRadius="15" 
                                   Padding="20"
                                   HasShadow="True"
                                   BorderColor="#E8E8E8">
                                <StackLayout Spacing="15">
                                    <!-- Account Info -->
                                    <StackLayout Spacing="8">
                                        <Label Text="{Binding AccountNumber, StringFormat='Account {0}'}" 
                                               FontSize="18" 
                                               FontAttributes="Bold" 
                                               TextColor="#2C3E50" />
                                        <Label Text="{Binding AccountBalance, StringFormat='{0:C}'}" 
                                               FontSize="32" 
                                               FontAttributes="Bold" 
                                               TextColor="#27AE60" />
                                        <Label Text="{Binding DateOpened, StringFormat='Opened: {0:MMM dd, yyyy}'}" 
                                               FontSize="14" 
                                               TextColor="#7F8C8D" />
                                    </StackLayout>

                                    <!-- View Button -->
                                    <Button Text="View Transactions" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectAccountCommand}"
                                            CommandParameter="{Binding}"
                                            BackgroundColor="#3498DB" 
                                            TextColor="White"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            CornerRadius="10"
                                            HeightRequest="45" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsLoading}" 
                               IsRunning="{Binding IsLoading}"
                               Color="#3498DB"
                               WidthRequest="40"
                               HeightRequest="40" />
        </StackLayout>
    </ScrollView>
</ContentPage>